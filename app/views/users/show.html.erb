<div class="well">
  <strong>Profile Details</strong>
  <hr/>
  <p>
    Username :  <%= @user.username%>
  </p>
</div>

<div>Activity:
  <ul class="nav nav-tabs">
    <li class="<%= 'active' if params[:tab] == 'posts' %>">
      <%= link_to "Posts (#{@user.posts.count})", user_path(@user, tab: 'posts')%>
    </li>
    <li class="<%= 'active' if params[:tab] == 'comments' %>">
      <%= link_to "Comments (#{@user.comments.count})", user_path(@user, tab: 'comments')%>
    </li>
  </ul>
</div>

<% if params[:tab] == 'posts'%>
  <% @user.posts.each do |post|%>
    <%= render 'posts/post', post: post %>
  <%end%>
<%elsif params[:tab] == 'comments'%>
  <div class="well">
    <% @user.comments.each do |comment|%>
      <%= render 'posts/comments', comment: comment , show_title: true%>
    <%end%>
  </div>
<%end%>
